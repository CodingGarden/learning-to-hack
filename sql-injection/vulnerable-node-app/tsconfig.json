{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./migrations/*.ts",
    "./seeds/*.ts",
    "./*.ts",
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
  ],
}
